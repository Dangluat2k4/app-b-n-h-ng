<h1>Thêm mới sản phẩm</h1>
<form action="" method="post" enctype="multipart/form-data">
    <p><%= smg  %></p>
    Tên sản phẩm: <input type="text" name="NameProduct" id="NameProduct"> <br>
    Giá tiền: <input type="text" name="Price" id="Price"> <br>
    Size: <input type="text" name="Size" id="Size"> <br>
    Date: <input type="text" name="Date" id="Date"> <br>

    <label for="IDCategory">Danh mục:</label>
    <select id="IDCategory" name="IDCategory" required>
        <% categories.forEach(function(category) { %>
            <option value="<%= category._id %>"><%= category.NameCategory %></option>
        <% }); %>
    </select>

    <!-- Category: <input type="text" name="IDCategory" id="IDCategory"> <br> -->
    Chọn ảnh: <input type="file" name="imgAnh" id="Image"/> <br>
    Amount: <input type="text" name="Amount" id="Amount"> <br>
    <button type="submit">Thêm mới</button>
</form> 