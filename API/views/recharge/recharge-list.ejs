<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Tài Khoản</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body>
    <h3>Danh sách nạp tiền</h3>
    <%- include('../inc/header') %>
        <div class="container">
            <div class="row">
                <div class="col">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Image</th>
                                <th scope="col">FullName</th>
                                <th scope="col">Email</th>
                                <th scope="col">Money</th>
                                <th scope="col">Time</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% listRcg.forEach((bill)=> { %>
                                <tr>
                                    <td>
                                        <%= bill._id %>
                                    </td>
                                    <td class="text-center"><img src="<%= bill.Image %>" width="100%" /></td>
                                    <td>
                                        <%= bill.FullName %>
                                    </td>
                                    <td>
                                        <%= bill.Email %>
                                    </td>
                                    <td>
                                        <%= bill.Money %>
                                    </td>
                                    <td>
                                        <%= bill.Time %>
                                    </td>
                                    <td>
                                        <%= bill.Status %>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                        <form action="/apiAdmin/<%= bill._id %>/confirm" method="post"
                                            class="recharge-form">
                                            <button type="submit" class="btn btn-success">Nạp tiền</button>
                                        </form>
                                        <form action="/apiAdmin/<%= bill._id %>/reject" method="post"
                                            class="reject-form">
                                            <button type="submit" class="btn btn-danger">Từ chối</button>
                                        </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <%- include('../inc/footer') %>

            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const rechargeForms = document.querySelectorAll('.recharge-form');
                    const rejectForms = document.querySelectorAll('.reject-form');

                    rechargeForms.forEach(form => {
                        form.addEventListener('submit', function (event) {
                            event.preventDefault();
                            const actionUrl = this.action;

                            fetch(actionUrl, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                }
                            })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.message) {
                                        alert(data.message);
                                        // Tải lại trang để cập nhật thông tin mới nhất
                                        location.reload();
                                    }
                                })
                                .catch(error => {
                                    console.error('Error:', error);
                                });
                        });
                    });

                    rejectForms.forEach(form => {
                        form.addEventListener('submit', function (event) {
                            event.preventDefault();
                            const actionUrl = this.action;

                            fetch(actionUrl, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                }
                            })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.message) {
                                        alert(data.message);
                                        location.reload();
                                    }
                                })
                                .catch(error => {
                                    console.error('Error:', error);
                                });
                        });
                    });
                });

            </script>
</body>

</html>