<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh Sách Hóa Đơn</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body>
    <%- include('../inc/header') %>
    <h2 style="text-align: center;">Hóa Đơn Đã Duyệt </h2>

    <div class="container">
        <div class="row">
            <div class="col">
                <a href="/apiAdmin/billDangXuLy">
                    <button type="submit" class="btn btn-warning" style="margin-right: 10px;"> Đang chờ </button>
                </a>
                <a href="/apiAdmin/billDaDuyet">
                    <button type="submit" class="btn btn-warning" style="margin-left: 10px;"> Đã duyệt </button>
                </a>
                <a href="/apiAdmin/billTuChoi">
                    <button type="submit" class="btn btn-warning" style="margin-left: 10px;"> Từ chối </button>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">User</th>
                            <th scope="col">IDBill</th>
                            <th scope="col">Status</th>
                            <th scope="col">Date</th>
                            <th scope="col">Total</th>
                            <th scope="col">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% listBillDuyet.forEach((bill) => { %>
                        <tr>
                            <td><%= bill._id %></td>
                            <td><%= bill.FullName %></td>
                            <td><%= bill.IDBill %></td>
                            <td><%= bill.Status %></td>
                            <td><%= bill.Date %></td>
                            <td><%= bill.Total %></td>
                            <td><%= bill.Amount %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('../inc/footer') %>
</body>

</html>
